{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/NodeGuard.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/NodeGuard.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/NodeGuard.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "extract-macaroons",
            "command": "sh",
            "type": "process",
            "args": [
                "-c",
                "./docker/extract-macaroons.sh"
            ]
        },
        {
            "label": "extract-macaroons-and-build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "extract-macaroons",
                "build"
            ]
        }
    ]
}