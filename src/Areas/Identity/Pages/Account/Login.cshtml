@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<main class="login-bg">
<div class="row">
    <div class="col-md-6 login-box">
        <section>
            <form id="account" method="post">
                <h1 class="text-center pb-4 login-title" >FundsManager</h1>
                <h5 class="text-white text-center" >Use a local account to Log In </h5>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating user-box">
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Username" class="form-label"></label>
                    <span asp-validation-for="Input.Username" class="text-danger validation-text"></span>
                </div>

                <div class="form-floating user-box">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label text-white mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="mb-4 w-100 btn-login btn-lg">Log in</button>
                </div>
                <div>
                    <p class="text-white">
                       Forgot your password? Contact a SuperAdmin
                    </p>
                   
                </div>
            </form>
        </section>
    </div>
